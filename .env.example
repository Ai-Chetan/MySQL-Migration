# Migration Platform - Environment Variables Template
# Copy this file to .env and update with your values

# ============================================================================
# METADATA DATABASE (PostgreSQL) - LOCAL CONFIGURATION
# ============================================================================
# Configure these settings for your local PostgreSQL installation
METADATA_DB_HOST=localhost
METADATA_DB_PORT=5432
METADATA_DB_NAME=migration_metadata
METADATA_DB_USER=postgres
METADATA_DB_PASSWORD=your_password_here

# ============================================================================
# REDIS QUEUE (DISABLED - TO BE ADDED LATER)
# ============================================================================
# Uncomment these when Redis support is added
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_QUEUE_NAME=migration_queue

# ============================================================================
# API SERVICE
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ============================================================================
# WORKER SERVICE
# ============================================================================
BATCH_SIZE=1000
MAX_RETRIES=3
HEARTBEAT_INTERVAL=5
STALE_TIMEOUT=30

# ============================================================================
# MIGRATION DEFAULTS
# ============================================================================
DEFAULT_CHUNK_SIZE=100000
DEFAULT_BATCH_SIZE=1000

